<?xml version="1.0"?>

<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/6.0.1/rti_dds_qos_profiles.xsd"
     version="6.0.1">

    <qos_library name="SecurityExampleProfiles">
    
        <!-- Default QoS:

             This profile contains the QoS that applications would use by
             default. We can use it as a base profile to inherit from and
             override some parameters.
         -->
        <qos_profile name="A" base_name="BuiltinQosLib::Generic.Security" is_default_qos="true">
          <participant_qos>
            <property>
              <value>
                <element>
                  <name>dds.sec.auth.identity_ca</name>
                  <value>file:../resources/cert/cacertECdsa.pem</value>
                </element>
                <element>
                  <name>dds.sec.auth.identity_certificate</name>
                  <value>file:../resources/cert/peer1ECdsa.pem</value>
                </element>
                <element>
                  <name>dds.sec.auth.private_key</name>
                  <value>file:../resources/cert/peer1keyECdsa.pem</value>
                </element>
                <element>
                  <name>dds.sec.access.permissions_ca</name>
                  <value>file:../resources/cert/cacertECdsa.pem</value>
                </element>
                <element>
                  <name>dds.sec.access.governance</name>
                  <value>file:../resources/xml/signed/signed_Governance.p7s</value>
                </element>
                <element>
                  <name>dds.sec.access.permissions</name>
                  <value>file:../resources/xml/signed/signed_PermissionsA.p7s</value>
                </element>
                <!-- -->
                <element>
                  <name>dds.transport.minimum_compatibility_version</name>
                  <value>6.1.0</value>
                  <propagate>false</propagate>
                </element>
                <!-- -->
              </value>
            </property>
          </participant_qos>
        </qos_profile>
      <qos_profile name="B" base_name="A">
        <participant_qos>
          <property>
            <value>
              <element>
                <name>dds.sec.auth.identity_certificate</name>
                <value>file:../resources/cert/peer2ECdsa.pem</value>
              </element>
              <element>
                <name>dds.sec.auth.private_key</name>
                <value>file:../resources/cert/peer2keyECdsa.pem</value>
              </element>
              <element>
                <name>dds.sec.auth.password</name>
                <value>VG9tQjEy</value>
              </element>
              <element>
                <name>dds.sec.access.permissions</name>
                <value>file:../resources/xml/signed/signed_PermissionsB.p7s</value>
              </element>
            </value>
          </property>
        </participant_qos>
      </qos_profile>
    </qos_library>
</dds>
