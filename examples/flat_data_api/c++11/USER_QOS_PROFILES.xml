<?xml version="1.0"?>
<!-- 
XML QoS Profile for CameraImage

This file is almost identical to the one that rtiddsgen would automatically
generate, except the profile inherits from BuiltinQosLibExp::Generic.StrictReliable.LargeData
to support large data samples.
-->
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="/Users/alejandro/repo/githost/ndds.4.1/resource/schema/rti_dds_qos_profiles.xsd"
     version="6.0.0">
    <!-- QoS Library containing the QoS profile used in the generated example.

        A QoS library is a named set of QoS profiles.
    -->
    <qos_library name="CameraImage_Library">

        <!-- QoS profile used to configure reliable communication between the DataWriter 
             and DataReader created in the example code, optimized for large data.
        -->
        <qos_profile name="CameraImage_Profile"
                     is_default_qos="true"
                     base_name="BuiltinQosLibExp::Generic.StrictReliable.LargeData">

            <!-- QoS used to configure the data writer created in the example code -->                
            <datawriter_qos>
                <publication_name>
                    <name>CameraImageDataWriter</name>
                </publication_name>
            </datawriter_qos>

            <!-- QoS used to configure the data reader created in the example code -->                
            <datareader_qos>
                <subscription_name>
                    <name>CameraImageDataReader</name>
                </subscription_name>
            </datareader_qos>

            <participant_qos>
                <!--
                The participant name, if it is set, will be displayed in the
                RTI tools, making it easier for you to tell one
                application from another when you're debugging.
                -->
                <participant_name>
                    <name>CameraImageParticipant</name>
                    <role_name>CameraImageParticipantRole</role_name>
                </participant_name>

            </participant_qos>
        </qos_profile>

    </qos_library>
</dds>
